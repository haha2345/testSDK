<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Apply2Activity"
    android:background="@color/white"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/topbar_apply2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true" />




    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EFF0F4"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/a21"
            android:textColor="#333333"
            android:text="联系方式"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="#E31313"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/a21"
            android:textSize="14sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_apply2_phone"
            android:hint="输入申请人联系方式"
            android:maxLength="11"
            android:textSize="14sp"
            android:inputType="phone"
            android:background="@drawable/transparent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EFF0F4"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/a21"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/a22"
            android:textColor="#333333"
            android:text="验证码"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="#E31313"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/a22"
            android:textSize="14sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_apply2_vcode"
            android:hint="请输入验证码"
            android:textSize="14sp"
            android:maxLength="6"
            android:background="@drawable/transparent"
            android:layout_marginTop="10dp"
            android:inputType="phone"
            android:layout_marginRight="11dp"
            android:layout_toLeftOf="@+id/tv_apply2_vcode"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送验证码"
            android:textColor="#4478ED"
            android:layout_marginTop="20dp"
            android:id="@+id/tv_apply2_vcode"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EFF0F4"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/a22"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"/>

    </RelativeLayout>
