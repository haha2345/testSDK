<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CameraActivity">

    <PortraitFrameLayout
        android:id="@+id/wrap_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        />

    <LinearLayout
        android:layout_width="345dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/layout_selector"
        android:padding="10dp">
        <TextView
            android:layout_width="325dp"
            android:layout_height="70dp"
            android:text="我同意赋予某某号贷款合同强制执行效力；我承诺一旦不按约定偿还债务，某某银行可要求公证处出具执行证书，法院可依据执行证书执行我本人的财产。"
            android:textColor="#ff245fff"
            android:textSize="15sp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="38dp"
        android:layout_height="20dp"
        android:id="@+id/tv_recorder_time"
        android:text="00:00"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="154dp"
        />
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/error"
        android:id="@+id/ibtn_cancle"
        android:layout_marginLeft="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="94dp"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/record"
        android:id="@+id/ibtn_record"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="84dp"/>
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/yes"
        android:id="@+id/ibtn_upload"
        android:layout_alignParentRight="true"
        android:layout_marginRight="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="94dp"
        android:visibility="invisible"
        />


</RelativeLayout>